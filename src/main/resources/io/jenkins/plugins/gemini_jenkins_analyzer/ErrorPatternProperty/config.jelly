<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
    <f:entry title="Error Patterns for AI Analysis" field="errorPatterns"
             description="Regular expressions to filter error logs (one per line). These patterns are used as a fallback when the analyzeError() pipeline step is called without the 'errorPatterns' parameter. If no patterns are specified in either location, all logs will be analyzed without filtering.">
        <f:textarea rows="15" style="font-family: monospace; width: 100%;" />
    </f:entry>

    <f:entry title="Context Lines" field="contextLines">
        <f:number default="3" min="0" max="20" step="1" />
    </f:entry>
</j:jelly>
