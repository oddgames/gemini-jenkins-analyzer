<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
    <f:section title="Gemini Jenkins Analyzer Configuration">
        <f:entry title="Enable AI Error Analysis" field="enableAnalysis">
            <f:checkbox />
        </f:entry>

        <f:entry title="API Key" field="apiKey" description="Google Gemini API key for error analysis">
            <f:password />
        </f:entry>

        <f:entry title="API URL" field="apiUrl" description="Optional: Custom API endpoint (leave empty for default Gemini API)">
            <f:textbox />
        </f:entry>

        <f:entry title="AI Model" field="model" description="Gemini model to use for analysis">
            <f:textbox default="gemini-2.0-flash"/>
        </f:entry>

        <f:entry title="">
            <div>
                <f:validateButton title="Test Configuration" progress="Testing..."
                                method="testConfiguration" with="apiKey,apiUrl,model" />
            </div>
        </f:entry>
    </f:section>
</j:jelly>
